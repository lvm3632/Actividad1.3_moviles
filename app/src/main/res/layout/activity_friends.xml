<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendsActivity">

    <Button
        android:id="@+id/btnFindByName"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginBottom="20dp"
        android:onClick="buscar"
        android:text="Buscar"
        app:layout_constraintBottom_toTopOf="@+id/btnDeleteByName"
        app:layout_constraintEnd_toEndOf="@+id/btnDeleteByName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnDeleteByName"
        app:layout_constraintTop_toBottomOf="@+id/btnSaveNameAndHobby" />

    <EditText
        android:id="@+id/editTextHobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="29dp"
        android:ems="10"
        android:hint="Hobby"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnSaveNameAndHobby"
        app:layout_constraintEnd_toEndOf="@+id/btnSaveNameAndHobby"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnSaveNameAndHobby"
        app:layout_constraintTop_toBottomOf="@+id/editTextName" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="169dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editTextHobby"
        app:layout_constraintEnd_toEndOf="@+id/editTextHobby"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editTextHobby"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDeleteByName"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="182dp"
        android:onClick="borrar"
        android:text="Borrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFindByName" />

    <Button
        android:id="@+id/btnSaveNameAndHobby"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginBottom="22dp"
        android:onClick="agregar"
        android:text="Guardar"
        app:layout_constraintBottom_toTopOf="@+id/btnFindByName"
        app:layout_constraintEnd_toEndOf="@+id/btnFindByName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnFindByName"
        app:layout_constraintTop_toBottomOf="@+id/editTextHobby" />

</androidx.constraintlayout.widget.ConstraintLayout>