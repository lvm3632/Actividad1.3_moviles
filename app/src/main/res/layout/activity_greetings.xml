<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GreetingsActivity">

    <Button
        android:id="@+id/btnUpdateGreetings"
        android:layout_width="203dp"
        android:layout_height="47dp"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="336dp"
        android:text="Actualizar datos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/editTextEmpty2"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmpty2" />

    <EditText
        android:id="@+id/editTextEmpty1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="Saludo1"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editTextEmpty2"
        app:layout_constraintEnd_toEndOf="@+id/editTextEmpty2"
        app:layout_constraintStart_toStartOf="@+id/editTextEmpty2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextEmpty2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Saludo2"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnUpdateGreetings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmpty1" />

</androidx.constraintlayout.widget.ConstraintLayout>